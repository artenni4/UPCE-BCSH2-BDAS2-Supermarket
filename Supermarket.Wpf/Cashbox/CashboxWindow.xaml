<UserControl x:Class="Supermarket.Wpf.Cashbox.CashboxWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Supermarket.Wpf.Cashbox"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1920">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="800" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="600" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="#D9D9D9" Margin="10" BorderBrush="#8F8F8F" BorderThickness="2">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0">
                        <TextBlock Text="POKLADNA " HorizontalAlignment="Center" Foreground="#1B2060" FontSize="35" FontWeight="DemiBold" VerticalAlignment="Center"/>
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <ListBox Background="Transparent" BorderThickness="0">
                                <ListBoxItem Content="Item 1" Foreground="#1B2060" FontSize="25"/>
                                <ListBoxItem Content="Item 2" Foreground="#1B2060" FontSize="25"/>
                                <ListBoxItem Content="Item 3" Foreground="#1B2060" FontSize="25"/>
                            </ListBox>
                        </ScrollViewer>
                    </StackPanel>

                    <Button Grid.Row="1" Content="ZAPLATIT" Width="350" Height="50" Margin="10" Background="#1B2060" BorderBrush="#025394" BorderThickness="2" Foreground="White" FontSize="20" />
                </Grid>
            </Border>




            <Border Grid.Column="1" Background="#D9D9D9" Margin="10" BorderBrush="#8F8F8F" BorderThickness="2">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal">
                        
                    </StackPanel>

                    <StackPanel Grid.Row="1" Orientation="Horizontal">
                        <Button Content="Next" Margin="5"/>
                        <Button Content="Back" Margin="5"/>
                    </StackPanel>

                    <TextBox Grid.Row="2" Margin="5"/>
                </Grid>
            </Border>

        </Grid>

        <StackPanel Grid.Row="1">
            <Border Background="#D9D9D9" Height="180" Margin="10" Padding="7 0 0 0" BorderBrush="#8F8F8F" BorderThickness="2">
                <WrapPanel VerticalAlignment="Center">
                    <Button Content="Button 1" Margin="5" Width="225" Height="120" FontSize="25" Background="#0471C7" Foreground="White" BorderBrush="#025394" BorderThickness="4">
                        <Button.Effect>
                            <DropShadowEffect BlurRadius="5" ShadowDepth="2" Color="LightGray"/>
                        </Button.Effect>
                    </Button>
                    <Button Content="Button 1" Margin="5" Width="225" Height="120" FontSize="25" Background="#0471C7" Foreground="White" BorderBrush="#025394" BorderThickness="4">
                        <Button.Effect>
                            <DropShadowEffect BlurRadius="5" ShadowDepth="2" Color="LightGray"/>
                        </Button.Effect>
                    </Button>
                    <Button Content="Button 1" Margin="5" Width="225" Height="120" FontSize="25" Background="#0471C7" Foreground="White" BorderBrush="#025394" BorderThickness="4">
                        <Button.Effect>
                            <DropShadowEffect BlurRadius="5" ShadowDepth="2" Color="LightGray"/>
                        </Button.Effect>
                    </Button>
                    <Button Content="Button 1" Margin="5" Width="225" Height="120" FontSize="25" Background="#0471C7" Foreground="White" BorderBrush="#025394" BorderThickness="4">
                        <Button.Effect>
                            <DropShadowEffect BlurRadius="5" ShadowDepth="2" Color="LightGray"/>
                        </Button.Effect>
                    </Button>
                    <Button Content="Button 1" Margin="5" Width="225" Height="120" FontSize="25" Background="#0471C7" Foreground="White" BorderBrush="#025394" BorderThickness="4">
                        <Button.Effect>
                            <DropShadowEffect BlurRadius="5" ShadowDepth="2" Color="LightGray"/>
                        </Button.Effect>
                    </Button>
                    <Button Content="Button 1" Margin="5" Width="225" Height="120" FontSize="25" Background="#0471C7" Foreground="White" BorderBrush="#025394" BorderThickness="4">
                        <Button.Effect>
                            <DropShadowEffect BlurRadius="5" ShadowDepth="2" Color="LightGray"/>
                        </Button.Effect>
                    </Button>
                    <Button Content="Button 1" Margin="5" Width="225" Height="120" FontSize="25" Background="#0471C7" Foreground="White" BorderBrush="#025394" BorderThickness="4">
                        <Button.Effect>
                            <DropShadowEffect BlurRadius="5" ShadowDepth="2" Color="LightGray"/>
                        </Button.Effect>
                    </Button>
                    <Button Content="Button 1" Margin="5" Width="225" Height="120" FontSize="25" Background="#0471C7" Foreground="White" BorderBrush="#025394" BorderThickness="4">
                        <Button.Effect>
                            <DropShadowEffect BlurRadius="5" ShadowDepth="2" Color="LightGray"/>
                        </Button.Effect>
                    </Button>
                </WrapPanel>
            </Border>
        </StackPanel>

    </Grid>
</UserControl>
