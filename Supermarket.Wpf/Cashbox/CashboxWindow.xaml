<UserControl x:Class="Supermarket.Wpf.Cashbox.CashboxWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Supermarket.Wpf.Cashbox"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1920">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="900" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="600" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Content for the first column (left side) -->
            <Border Grid.Column="0" Background="#D9D9D9" Margin="10" BorderBrush="#E0E0E0" BorderThickness="1">
                <StackPanel>
                    <!-- Add your controls here for the left side -->
                </StackPanel>
            </Border>

            <!-- Content for the second column (right side) -->
            <Border Grid.Column="1" Background="#D9D9D9" Margin="10" BorderBrush="#E0E0E0" BorderThickness="1">
