<UserControl x:Class="Supermarket.Wpf.Cashbox.CashboxWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Supermarket.Wpf.Cashbox"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1920">
    <Viewbox Stretch="Uniform">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="800" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="600" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Background="#D9D9D9" Margin="10" BorderBrush="#8F8F8F" BorderThickness="2">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0">
                            <TextBlock Text="POKLADNA " HorizontalAlignment="Center" Foreground="#1B2060" FontSize="35" FontWeight="DemiBold" VerticalAlignment="Center"/>
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <ListBox Background="Transparent" BorderThickness="0" ItemsSource="{Binding SelectedProducts}">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Name}" Foreground="#1B2060" FontSize="25"/>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </ScrollViewer>
                        </StackPanel>


                        <Button Grid.Row="1" Content="ZAPLATIT" Width="500" Height="75" Margin="10" Background="#1B2060" BorderBrush="#025394" BorderThickness="2" Foreground="White" FontSize="20" />
                    </Grid>
                </Border>

                <Border Grid.Column="1" Background="#D9D9D9" Margin="10" BorderBrush="#8F8F8F" BorderThickness="2">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <ItemsControl ItemsSource="{Binding DisplayedProducts}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="5" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="Black" BorderThickness="1" Width="200" Height="200" Margin="5">
                                        <Button Command="{Binding DataContext.ProductClickCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}" CommandParameter="{Binding}" Background="Transparent" BorderBrush="Transparent">
                                            <StackPanel VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Name}" Foreground="#1B2060" FontWeight="DemiBold" HorizontalAlignment="Center" FontSize="25"/>
                                            </StackPanel>
                                        </Button>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>


                        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Command="{Binding PreviousPageCommand}" Margin="5">
                                <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE76B;" FontSize="70" Foreground="#025394"/>
                            </Button>
                            <Button Command="{Binding NextPageCommand}" Margin="5">
                                <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE76C;" FontSize="70" Foreground="#025394"/>
                            </Button>
                        </StackPanel>

                        <TextBox Grid.Row="2" Margin="5" Height="50" FontSize="35"/>
                    </Grid>
                </Border>

            </Grid>

            <StackPanel Grid.Row="1">
                <Border Background="#D9D9D9" Height="180" BorderBrush="#8F8F8F" BorderThickness="2">
                    <WrapPanel VerticalAlignment="Center">
                        <ItemsControl ItemsSource="{Binding Categories}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <UniformGrid Columns="5" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Content="{Binding Name}" Margin="5" Width="225" Height="120" FontSize="25"
                                        Background="#0471C7" Foreground="White" BorderBrush="#025394" BorderThickness="4"
                                        Command="{Binding DataContext.CategoryButtonClickCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                        CommandParameter="{Binding}">
                                        <Button.Effect>
                                            <DropShadowEffect BlurRadius="5" ShadowDepth="2" Color="LightGray"/>
                                        </Button.Effect>
                                    </Button>

                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        <!--<Button Content="Maso" Margin="5" Width="225" Height="120" FontSize="25" Background="#0471C7" Foreground="White" BorderBrush="#025394" BorderThickness="4">
                            <Button.Effect>
                                <DropShadowEffect BlurRadius="5" ShadowDepth="2" Color="LightGray"/>
                            </Button.Effect>
                        </Button>
                        <Button Content="Ryby" Margin="5" Width="225" Height="120" FontSize="25" Background="#0471C7" Foreground="White" BorderBrush="#025394" BorderThickness="4">
                            <Button.Effect>
                                <DropShadowEffect BlurRadius="5" ShadowDepth="2" Color="LightGray"/>
                            </Button.Effect>
                        </Button>
                        <Button Content="Ovoce" Margin="5" Width="225" Height="120" FontSize="25" Background="#0471C7" Foreground="White" BorderBrush="#025394" BorderThickness="4">
                            <Button.Effect>
                                <DropShadowEffect BlurRadius="5" ShadowDepth="2" Color="LightGray"/>
                            </Button.Effect>
                        </Button>
                        <Button Content="Zelenina" Margin="5" Width="225" Height="120" FontSize="25" Background="#0471C7" Foreground="White" BorderBrush="#025394" BorderThickness="4">
                            <Button.Effect>
                                <DropShadowEffect BlurRadius="5" ShadowDepth="2" Color="LightGray"/>
                            </Button.Effect>
                        </Button>
                        <Button Content="Pecivo" Margin="5" Width="225" Height="120" FontSize="25" Background="#0471C7" Foreground="White" BorderBrush="#025394" BorderThickness="4">
                            <Button.Effect>
                                <DropShadowEffect BlurRadius="5" ShadowDepth="2" Color="LightGray"/>
                            </Button.Effect>
                        </Button>
                        <Button Content="Galanterie" Margin="5" Width="225" Height="120" FontSize="25" Background="#0471C7" Foreground="White" BorderBrush="#025394" BorderThickness="4">
                            <Button.Effect>
                                <DropShadowEffect BlurRadius="5" ShadowDepth="2" Color="LightGray"/>
                            </Button.Effect>
                        </Button>
                        <Button Content="Napoje" Margin="5" Width="225" Height="120" FontSize="25" Background="#0471C7" Foreground="White" BorderBrush="#025394" BorderThickness="4">
                            <Button.Effect>
                                <DropShadowEffect BlurRadius="5" ShadowDepth="2" Color="LightGray"/>
                            </Button.Effect>
                        </Button>
                        <Button Content="Mlecne vyrobky" Margin="5" Width="225" Height="120" FontSize="25" Background="#0471C7" Foreground="White" BorderBrush="#025394" BorderThickness="4">
                            <Button.Effect>
                                <DropShadowEffect BlurRadius="5" ShadowDepth="2" Color="LightGray"/>
                            </Button.Effect>
                        </Button>
                        <Button Content="Pripravene potraviny" Margin="5" Width="225" Height="120" FontSize="25" Background="#0471C7" Foreground="White" BorderBrush="#025394" BorderThickness="4">
                            <Button.Effect>
                                <DropShadowEffect BlurRadius="5" ShadowDepth="2" Color="LightGray"/>
                            </Button.Effect>
                        </Button>-->
                    </WrapPanel>
                </Border>
            </StackPanel>
        </Grid>
    </Viewbox>
</UserControl>
