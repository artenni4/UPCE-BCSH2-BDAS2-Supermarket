<Window x:Class="Supermarket.Wpf.Main.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Supermarket.Wpf" xmlns:cashbox="clr-namespace:Supermarket.Wpf.Cashbox" xmlns:login="clr-namespace:Supermarket.Wpf.Login"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <DataTemplate DataType="{x:Type cashbox:CashboxViewModel}">
            <cashbox:CashboxWindow />
        </DataTemplate>
        <DataTemplate DataType="{x:Type login:LoginViewModel}">
            <login:LoginWindow />
        </DataTemplate>
    </Window.Resources>
    <ContentPresenter Content="{Binding CurrentViewModel}"/>

</Window>
